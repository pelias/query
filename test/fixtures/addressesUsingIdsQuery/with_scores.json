{
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "minimum_should_match": 1,
          "should": [
            {
              "bool": {
                "_name": "fallback.street",
                "must": [
                  {
                    "match_phrase": {
                      "address_parts.street": {
                        "query": "street value"
                      }
                    }
                  }
                ],
                "filter": {
                  "term": {
                    "layer": "street"
                  }
                }
              }
            },
            {
              "bool": {
                "_name": "fallback.address",
                "must": [
                  {
                    "match_phrase": {
                      "address_parts.unit": {
                        "query": "unit value"
                      }
                    }
                  },
                  {
                    "match_phrase": {
                      "address_parts.number": {
                        "query": "housenumber value"
                      }
                    }
                  },
                  {
                    "match_phrase": {
                      "address_parts.street": {
                        "query": "street value"
                      }
                    }
                  }
                ],
                "filter": {
                  "term": {
                    "layer": "address"
                  }
                }
              }
            }
          ]
        }
      },
      "functions": [
        { "score field 1": "score value 1" },
        { "score field 2": "score value 2" }
      ]
    }
  },
  "size": "size value" ,
  "track_scores": "track_scores value",
  "sort": [
    "_score",
    "_id"
  ]
}
